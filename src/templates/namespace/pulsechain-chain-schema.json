{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "defaultNetwork": {
      "type": "string",
      "description": "Default network for PulseChain operations"
    },
    "defaultWallet": {
      "type": "string",
      "description": "Default wallet address for examples and testing"
    },
    "rpcProvider": {
      "type": "string",
      "enum": ["url"],
      "default": "url",
      "description": "RPC provider to use: 'url' for standard nodeURL from network config"
    }
  },
  "required": ["defaultNetwork", "defaultWallet"],
  "additionalProperties": false
}
